// 1. Write a program that takes a character (number or string) in a variable & checks whether the given input is a
// number, uppercase letter or lower case letter. (Hint: ASCII codes:- A=65, Z=90, a=97, z=122).

var input = prompt("Enter number or character");
if(Number(input)){
    alert("This is a number")
}
else if(input >= "A" && input <= "Z"){
    alert("This is Upercase Letter")
}
else if(input >= "a" && input <= "z"){
    alert("This is lowercase letter")
}

// Q2 Write a JavaScript program that accept two integers and display the larger. Also show if the two integers are equal.

var num = +prompt("enter first Integer");
var num1 = +prompt("enter Second Integer");
if(num > num1){
alert(num1 + "is Larger then "+ num)
}
else{
    alert(num + "and" +num1+ " are equal. ")
}


// q3 Write a program that takes input a number from user & state whether the number is positive, negative or zero

var number = +prompt("Enter a number");
if(number > 0){
    alert("The given number is Postive")
}
if(number > 0){
    alert("The given number is Negative")
}
if(number > 0){
    alert("The given number is Zero")
}

// Q4 Write a program that takes a character (i.e. string of     length 1) and returns true if it is a vowel, false otherwise

var character = prompt("Please Enter Vowel Character");
if(character === "a" || character === "e" || character === "i" || character === "o" || character === "u"){
    alert("True")
}
else alert("False");


//Write a program that
// a. Store correct password in a JS variable.
// b. Asks user to enter his/her password
// c. Validate the two passwords:
// i. Check if user has entered password. If not, then
// give message “ Please enter your password”
// ii. Check if both passwords are same. If they are
// same, show message “Correct! The password you
// entered matches the original password”. Show
// “Incorrect password” otherwise


var password = "abcd1234";
var userPassword = prompt("Enter Your Password");
if(userPassword === null || userPassword === "" ){
    alert("Please Enter your Password");
}

else if (userPassword === password){
    alert("Correct! the password you entered matches the original password " );
}
else{
    ("Incorrect password");
}

